                        <a href="<%= sponsor.link %>">
                            <img class="img-responsive" src="<%= sponsor.logo %>" title="<%= sponsor.description %>">
                        </a>
                    </div>
                    <!-- <div class="sponsorsAbout text-with-comic-panel">
                        <div class="sponsorCompany">
                            <%= sponsor.name %>
                            <br>
                            <a href="<%= sponsor.link %>"><%= sponsor.link %></a>
                        </div>
                    </div> -->
                </div>
                
            <% } %>
        </div>
    </section>
    <% } %>

<% } %>