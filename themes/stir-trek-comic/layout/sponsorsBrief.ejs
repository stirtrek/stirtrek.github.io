<% 

// Only render if there is sponsor data for this year
var thisYearsSponsors = eval(`site.data.sponsors.year${config.currentYear}`);
if(typeof(thisYearsSponsors) === 'object' && thisYearsSponsors !== null)  { 
    
%>

    <!-- Sponsors -->
    <div class="row">
        <div class="col-md-6">
            <div class="comic-panel-header"><%= config.currentYear %> Sponsors</div>
        </div>

        <div class="col-md-12">
            <div class="text-with-comic-panel">
                This year isn't going to be like any other year. We said that last year and it's still true! Thank you to our great sponsors for making it possible!
                <br>Interested in exploring virtual sponsorship opportunities? Email us:
                <a href="mailto:info@stirtrek.com?subject=[Stir%20Trek]%20Question%20ref:site">info@stirtrek.com</a>
            </div>
        </div>
    </div>

    <% if(thisYearsSponsors.hasOwnProperty('principal')) { %>
    <section>
        <div class="row">
            <% for (var sponsor of thisYearsSponsors.principal ) {%>

                <div class="col-md-6 sponsor sponsor-<%= sponsor.level %>">
                    <div class="comic-panel-body">
                        <a href="<%= sponsor.link %>">
                            <img class="img-responsive" src="<%= sponsor.logo %>" title="<%= sponsor.description %>">
                        </a>
                    </div>
                    <div class="sponsorsAbout text-with-comic-panel">
                        <div class="sponsorCompany">
                            <%= sponsor.name %>
                            <!-- <br> -->
                            <!-- <a href="<%= sponsor.link %>"><%= sponsor.link %></a> -->
                        </div>
                    </div>
                </div>
                
            <% } %>
        </div>
    </section>
    <% } %>
    <% if(thisYearsSponsors.hasOwnProperty('platinum')) { %>
